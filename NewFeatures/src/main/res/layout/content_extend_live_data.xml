<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test.sdg.newfeatures.activities.extend.live.data.ExtendLiveDataActivity"
    tools:showIn="@layout/activity_extend_live_data">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="10">

        <TextView
            android:id="@+id/ExtendLiveDataActivity_stock_symbol_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:hint="Stock Symbol"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/ExtendLiveDataActivity_stock_price_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:hint="Stock Price"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/ExtendLiveDataActivity_stock_symbol_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="stock symbol"
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <EditText
            android:id="@+id/ExtendLiveDataActivity_stock_price_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="stock price"
            android:inputType="numberDecimal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/ExtendLiveDataActivity_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update"
            android:textAllCaps="false"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal"
            app:layout_row="5" />
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>
